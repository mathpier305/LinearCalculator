<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="3"
        android:background="#000"
        android:layout_margin="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="13"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:text="x" />

    </LinearLayout>
    <LinearLayout 
        android:id="@+id/bigBlueBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:layout_weight="7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
        <LinearLayout 
            android:id="@+id/orangeBox1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_weight="5"
            android:orientation="vertical">
             <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:layout_margin="2dp"
            android:text="sin" />
             <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/gangnamestyle"
            android:text="cos" />
              <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/gangnamestyle"
            android:text="tan" />
              <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/gangnamestyle"
            android:text="π" />
               <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:layout_margin="2dp"
            android:text="x" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/orangeBox2"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="5"
                   android:background="#000"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_marginRight="20dp">
                <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:layout_margin="2dp"
            android:text="ln" />
             <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:layout_margin="2dp"
            android:text="log" />
              <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:layout_margin="2dp"
            android:text="tan" />
              <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:layout_margin="2dp"
            android:text="π" />
               <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/gangnamestyle"
            android:layout_margin="2dp"
            android:text="x" />
               </LinearLayout>
              
        <LinearLayout
            android:id="@+id/blackBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_weight="21"
            android:orientation="vertical">
               <LinearLayout
                   android:id="@+id/greenBox1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:background="#000">  
                                   <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="7" />
             <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="8" />
              <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="9" />
              <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            style="@style/gangnamestyle2" android:layout_margin="2dp" />
               <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="("
            style="@style/gangnamestyle2" android:layout_margin="2dp" />                 
               </LinearLayout>
                 <LinearLayout
                   android:id="@+id/greenBox2"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:background="#000"> 
                      <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="4" />
             <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="5" />
              <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="6" />
              <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X"
            style="@style/gangnamestyle2" android:layout_margin="2dp" />
               <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=")" 
            style="@style/gangnamestyle2" android:layout_margin="2dp"/>                                   
               </LinearLayout>
                 <LinearLayout
                   android:id="@+id/blueBox"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="2"
                   android:background="#00f">                   
               
               <LinearLayout
                   android:id="@+id/redBox"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:background="#000"
                   android:layout_weight="4"
                   android:orientation="vertical"> 
                     <LinearLayout
                   android:id="@+id/greenBox3"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:background="#000">
                         <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="1" />
              <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="2" />
              <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp" style="@style/gangnamestylelight"
            android:text="3" />
               <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            style="@style/gangnamestyle2" android:layout_margin="2dp" />
                   </LinearLayout> 
                     <LinearLayout
                   android:id="@+id/greenBox4"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:background="#000"> 

                   <Button
                       android:layout_margin="2dp" style="@style/gangnamestylelight"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       android:text="0" />

              <Button
                  android:layout_margin="2dp" style="@style/gangnamestylelight"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="." />

              <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X" 
            style="@style/gangnamestyle2" android:layout_margin="2dp"/>
              
                   </LinearLayout> 
                   </LinearLayout> 
                   <Button
            		android:layout_width="0dp"
            		android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:text="="
            		style="@style/gangnamestyle2" android:layout_margin="2dp" />                  
               </LinearLayout>
               </LinearLayout>
            
            
        </LinearLayout>


</LinearLayout>
